NewMauville_Regieleki_MapScripts::
	map_script MAP_SCRIPT_ON_RESUME, NewMauville_Regieleki_OnResume
	map_script MAP_SCRIPT_ON_TRANSITION, NewMauville_Regieleki_OnTransition
	.byte 0

NewMauville_Regieleki_OnResume:
	call_if_set FLAG_SYS_CTRL_OBJ_DELETE, NewMauville_Regieleki_EventScript_TryRemoveRegieleki
	end

NewMauville_Regieleki_EventScript_TryRemoveRegieleki::
	specialvar VAR_RESULT, GetBattleOutcome
	goto_if_ne VAR_RESULT, B_OUTCOME_CAUGHT, Common_EventScript_NopReturn
	removeobject VAR_LAST_TALKED
	return

NewMauville_Regieleki_OnTransition:
	setflag FLAG_LANDMARK_ANCIENT_TOMB
	call_if_unset FLAG_DEFEATED_REGIELEKI, NewMauville_Regieleki_EventScript_ShowRegieleki
	end

NewMauville_Regieleki_EventScript_ShowRegieleki::
	clearflag FLAG_HIDE_REGIELEKI
	return

NewMauville_Regieleki_EventScript_Regieleki::
	lock
	faceplayer
	waitse
	playmoncry SPECIES_REGIELEKI, CRY_MODE_ENCOUNTER
	delay 40
	waitmoncry
	setwildbattle SPECIES_REGIELEKI, 60
	setflag FLAG_SYS_CTRL_OBJ_DELETE
	special StartRegiBattle
	waitstate
	clearflag FLAG_SYS_CTRL_OBJ_DELETE
	specialvar VAR_RESULT, GetBattleOutcome
	goto_if_eq VAR_RESULT, B_OUTCOME_WON, NewMauville_Regieleki_EventScript_DefeatedRegieleki
	goto_if_eq VAR_RESULT, B_OUTCOME_RAN, NewMauville_Regieleki_EventScript_RanFromRegieleki
	goto_if_eq VAR_RESULT, B_OUTCOME_PLAYER_TELEPORTED, NewMauville_Regieleki_EventScript_RanFromRegieleki
	setflag FLAG_DEFEATED_REGIELEKI
	release
	end

NewMauville_Regieleki_EventScript_DefeatedRegieleki::
	setflag FLAG_DEFEATED_REGIELEKI
	goto Common_EventScript_RemoveStaticPokemon
	end

NewMauville_Regieleki_EventScript_RanFromRegieleki::
	setvar VAR_0x8004, SPECIES_REGIELEKI
	goto Common_EventScript_LegendaryFlewAway
	end
