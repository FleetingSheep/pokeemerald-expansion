Route115_Regidrago_MapScripts::
	map_script MAP_SCRIPT_ON_RESUME, Route115_Regidrago_OnResume
	map_script MAP_SCRIPT_ON_TRANSITION, Route115_Regidrago_OnTransition
	.byte 0

Route115_Regidrago_OnResume:
	call_if_set FLAG_SYS_CTRL_OBJ_DELETE, Route115_Regidrago_EventScript_TryRemoveRegidrago
	end

Route115_Regidrago_EventScript_TryRemoveRegidrago::
	specialvar VAR_RESULT, GetBattleOutcome
	goto_if_ne VAR_RESULT, B_OUTCOME_CAUGHT, Common_EventScript_NopReturn
	removeobject VAR_LAST_TALKED
	return

Route115_Regidrago_OnTransition:
	setflag FLAG_LANDMARK_ANCIENT_TOMB
	call_if_unset FLAG_DEFEATED_REGIDRAGO, Route115_Regidrago_EventScript_ShowRegidrago
	end

Route115_Regidrago_EventScript_ShowRegidrago::
	clearflag FLAG_HIDE_REGIDRAGO
	return

Route115_Regidrago_EventScript_Regidrago::
	lock
	faceplayer
	waitse
	playmoncry SPECIES_REGIDRAGO, CRY_MODE_ENCOUNTER
	delay 40
	waitmoncry
	setwildbattle SPECIES_REGIDRAGO, 60
	setflag FLAG_SYS_CTRL_OBJ_DELETE
	special StartRegiBattle
	waitstate
	clearflag FLAG_SYS_CTRL_OBJ_DELETE
	specialvar VAR_RESULT, GetBattleOutcome
	goto_if_eq VAR_RESULT, B_OUTCOME_WON, Route115_Regidrago_EventScript_DefeatedRegidrago
	goto_if_eq VAR_RESULT, B_OUTCOME_RAN, Route115_Regidrago_EventScript_RanFromRegidrago
	goto_if_eq VAR_RESULT, B_OUTCOME_PLAYER_TELEPORTED, Route115_Regidrago_EventScript_RanFromRegidrago
	setflag FLAG_DEFEATED_REGIDRAGO
	release
	end

Route115_Regidrago_EventScript_DefeatedRegidrago::
	setflag FLAG_DEFEATED_REGIDRAGO
	goto Common_EventScript_RemoveStaticPokemon
	end

Route115_Regidrago_EventScript_RanFromRegidrago::
	setvar VAR_0x8004, SPECIES_REGIDRAGO
	goto Common_EventScript_LegendaryFlewAway
	end
